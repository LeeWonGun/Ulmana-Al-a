<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/quizSetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="푼 날짜: YYYY-MM-DD"
            android:textSize="14sp"
            android:textColor="#4F8EF7"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/quizSetQuizType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종목:"
            android:textSize="15sp"
            android:textColor="#22223B"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/quizSetGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장르: @@"
            android:textSize="16sp"
            android:textColor="#22223B"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/quizSetTotalQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 문제 수: @@"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/quizSetWrongAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오답 수: @"
            android:textSize="14sp"
            android:textColor="#FF5C5C"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/quizSetButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:text="바로가기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:backgroundTint="#4F8EF7"
            android:elevation="2dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
