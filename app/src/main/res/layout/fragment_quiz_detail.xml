<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- 문제 번호 -->
                <TextView
                    android:id="@+id/tv_question_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문제 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4F8EF7"
                    android:layout_marginBottom="4dp"/>

                <!-- 문제 내용 -->
                <TextView
                    android:id="@+id/tv_question_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="문제 내용이 여기에 표시됩니다."
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#22223B"/>

                <!-- 선택지 -->
                <RadioGroup
                    android:id="@+id/rg_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/rb_option1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="보기1"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:buttonTint="#4F8EF7"
                        android:textColor="#22223B"/>

                    <RadioButton
                        android:id="@+id/rb_option2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="보기2"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:buttonTint="#4F8EF7"
                        android:textColor="#22223B"/>

                    <RadioButton
                        android:id="@+id/rb_option3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="보기3"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:buttonTint="#4F8EF7"
                        android:textColor="#22223B"/>

                    <RadioButton
                        android:id="@+id/rb_option4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="보기4"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:buttonTint="#4F8EF7"
                        android:textColor="#22223B"/>
                </RadioGroup>

                <!-- 내가 선택한 답, 실제 정답 -->
                <TextView
                    android:id="@+id/tv_user_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내가 선택한 답"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="#F44336" />

                <TextView
                    android:id="@+id/tv_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정답"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="8dp" />

                <!-- 해설 버튼 -->
                <Button
                    android:id="@+id/btn_explanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="해설 보기"
                    android:backgroundTint="#EAF1FF"
                    android:textColor="#4F8EF7"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:elevation="2dp"/>

                <!-- 하단 버튼 영역 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_prev"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="이전"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#EAF1FF"
                        android:textColor="#4F8EF7"
                        android:elevation="2dp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="다음"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#4F8EF7"
                        android:textColor="#FFF"
                        android:elevation="4dp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_back"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="돌아가기"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#6C757D"
                        android:textColor="#FFF"
                        android:elevation="2dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="제출"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#4F8EF7"
                        android:textColor="#FFF"
                        android:elevation="4dp"
                        android:visibility="gone"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
