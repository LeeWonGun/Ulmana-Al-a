<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".GenreActivity">

    <!-- 🔹 안내 문구 추가 -->
    <TextView
        android:id="@+id/tv_select_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심사를 선택하세요"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- 🔹 체크박스 리스트 -->
    <CheckBox
        android:id="@+id/chk_science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과학" />

    <CheckBox
        android:id="@+id/chk_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="역사" />

    <CheckBox
        android:id="@+id/chk_four_idoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사자성어" />

    <CheckBox
        android:id="@+id/chk_spelling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맞춤법" />

    <CheckBox
        android:id="@+id/chk_capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수도" />

    <CheckBox
        android:id="@+id/chk_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미술" />

    <!-- 🔹 다음 버튼 -->
    <Button
        android:id="@+id/btn_selectgenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:layout_marginTop="20dp" />
</LinearLayout>