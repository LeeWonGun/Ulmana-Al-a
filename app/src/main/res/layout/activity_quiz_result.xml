<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="0dp"
    tools:context=".QuizResultActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tv_result_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유형: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4F8EF7"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_result_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장르: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#22223B"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_result_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맞힌 개수: "
                android:textSize="16sp"
                android:textColor="#4F8EF7"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_result_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="틀린 개수: "
                android:textSize="16sp"
                android:textColor="#FF5C5C"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_result_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점수: "
                android:textSize="18sp"
                android:textColor="#22223B"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
