<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".QuizResultActivity">

    <TextView
        android:id="@+id/tv_result_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유형: "
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_result_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장르: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_type"/>

    <TextView
        android:id="@+id/tv_result_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맞힌 개수: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_genre"/>

    <TextView
        android:id="@+id/tv_result_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="틀린 개수: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_correct"/>

    <TextView
        android:id="@+id/tv_result_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점수: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_wrong"/>

</androidx.constraintlayout.widget.ConstraintLayout>