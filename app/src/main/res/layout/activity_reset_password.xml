<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 재설정"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#22223B"
                android:paddingBottom="28dp"
                android:letterSpacing="0.04"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="이메일 입력"
                android:inputType="textEmailAddress"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:textColor="#22223B"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="새 비밀번호 입력"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:textColor="#22223B"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="12dp"
                android:elevation="2dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnResetPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="비밀번호 재설정"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:backgroundTint="#4F8EF7"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvResetMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호가 성공적으로 변경되었습니다."
                android:textSize="16sp"
                android:textColor="#4F8EF7"
                android:gravity="center"
                android:background="@drawable/rounded_result_bg"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
