<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp"
            android:background="@android:color/white">

            <!-- 퀴즈 결과 제목 -->
            <TextView
                android:id="@+id/text_quiz_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종목: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4F8EF7"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과목: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#22223B"
                android:layout_marginBottom="16dp"/>

            <!-- 점수 및 통계 -->
            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점수: "
                android:textSize="18sp"
                android:textColor="#22223B"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정답 수: "
                android:textSize="16sp"
                android:textColor="#4F8EF7"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/text_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오답 수: "
                android:textSize="16sp"
                android:textColor="#FF5C5C"
                android:layout_marginBottom="8dp"/>

            <!-- 스피드 퀴즈에서만 보일 소요 시간 -->
            <TextView
                android:id="@+id/text_time_taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소요 시간: "
                android:textSize="16sp"
                android:textColor="#22223B"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- 다시 풀기 버튼 -->
            <Button
                android:id="@+id/btn_retry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="다시 풀기"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:backgroundTint="#4F8EF7"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- 홈으로 돌아가기 버튼 -->
            <Button
                android:id="@+id/btn_go_home"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="홈으로 돌아가기"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#4F8EF7"
                android:backgroundTint="#EAF1FF"
                android:elevation="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
